// Github: @kaloslazo

{
  // =>> General config
  "layer": "top",
  "position": "bottom",
  "spacing": 5,
  "margin-bottom": 10,
  "margin-right": 10,
  "margin-left": 10,

  // =>> Modules sort
  "modules-left": [
    "custom/launcher",
    "hyprland/workspaces",
    "temperature",
    "custom/weather",
    "pulseaudio",
    "mpd",
    "custom/cava-internal",
    "custom/media",
    "hyprland/window"
  ],
  "modules-center": [],
  "modules-right": [
    "network",
    "battery",
    "cpu",
    "memory",
    "backlight",
    "hyprland/language",
    "custom/pacman",
    "clock",
    "tray"
  ],

  // =>> Custom launcher
  "custom/launcher": {
    "format": "🚀 Arch",
    "on-click": "wofi --show drun -I -a",
    "tooltip-format": "sudo pacman -Q linux",
    "tooltip": false
  },

  // =>> Custom weather
  "custom/weather": {
    "format": "{}",
    "tooltip": true,
    "interval": 3600,
    "exec": "python ~/DevHub/Linest/scripts/getWeather.py",
    "return-type": "json"
  },

  // =>> Custom pacman
  "custom/pacman": {
    "format": "{icon}{}",
    "return-type": "json",
    "format-icons": {
      "pending-updates": "🔔",
      "updated": "✅ Updated"
    },
    "exec-if": "which waybar-updates",
    "exec": "waybar-updates"
  },

  // =>> Workspaces
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
      "1": "󰨞",
      "2": "",
      "3": "",
      "4": "󰓇",
      "5": "󰝆",
      "urgent": "",
      "focused": "",
      "default": ""
    }
  },

  // =>> Window
  "hyprland/window": {
    "format": "🌎 {}",
    "separate-outputs": true
  },

  // =>> Keyboard state
  "keyboard-state": {
    "numlock": true,
    "capslock": true,
    "format": "{name} {icon}",
    "format-icons": {
      "locked": "",
      "unlocked": ""
    }
  },

  // =>> Language
  "hyprland/language": {
    "format": "🎯 {}"
  },

  // =>> Idle inhibitor
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },

  // =>> Tray
  "tray": {
    "spacing": 10
  },

  // =>> Clock
  "clock": {
    "format": "󱑀 {:%H:%M}"
  },

  // =>> Cpu
  "cpu": {
    "format": "{usage}% ",
    "tooltip": false
  },

  // =>> Memory
  "memory": {
    "format": "{}% 󰕮"
  },

  // =>> Temperature
  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}°C 🌡️"
  },

  // =>> Backlight
  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": ["", "", "", "", "", "", "", "", ""]
  },

  // =>> Battery
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-full": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-plugged": "{capacity}% ",
    "format-alt": "{time} {icon}",
    "format-icons": ["", "", "", "", ""]
  },

  // =>> Battery
  "battery#bat2": {
    "bat": "BAT2"
  },

  // =>> Network
  "network": {
    "format-wifi": "📡 {essid} ({signalStrength}%) ",
    "format-ethernet": "{ipaddr}/{cidr} ",
    "tooltip-format": "{ifname} via {gwaddr} ",
    "format-linked": "{ifname} (No IP) ",
    "format-disconnected": "Disconnected ⚠",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  },

  // =>> Pulseaudio
  "pulseaudio": {
    "format": "{volume}% {icon} {format_source}",
    "format-bluetooth": "{volume}% {icon} {format_source}",
    "format-bluetooth-muted": "🔇 {icon} {format_source}",
    "format-muted": " {format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""]
    },
    "on-click": "pavucontrol"
  },

  // =>> Custom media
  "custom/media": {
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "",
      "default": "🎜"
    },
    "escape": true,
    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
  }
}
